<li class="flexrow" id="coin-{{key}}">
    <fieldset>
        <div class="flexrow">
            <div class="flexrow path">
                <div class="wrapper-rel">
                    <input type="checkbox" name="coin-enabled-{{key}}" {{checked coin.flags.sfc.enabled}}>
                    <label for="coin-enabled-{{key}}">{{localize "SFC.Enabled"}}</label>
                </div>
            </div>
        </div>
        <div class="flexrow">
            <div class="flexcol icon">
                <img name="icon-{{key}}" src="{{coin.img}}" title="Icon" class="icon" />
            </div>
            <div class="flexcol text-entry">
                <div class="flexrow">
                    <div class="coin">
                        <div class="wrapper-rel">
                            <label for="coin-name-{{key}}" class="inset-label">{{localize "SFC.CoinName"}}</label>
                            <input type="text" name="coin-name-{{key}}" title="Coin" value="{{coin.name}}"
                                class="coin coin-text-input" placeholder="Coin Name" data-dtype="String">
                        </div>
                    </div>
                </div>
                <div class="flexrow path">
                    <div class="wrapper-rel">
                        <label for="icon-path-{{key}}" class="inset-label">{{localize "SFC.Icon"}}</label>
                        <input type="text" name="icon-path-{{key}}" title="Icon Path" class="icon-path coin-text-input"
                            value="{{coin.img}}" placeholder="/icons/example.svg" data-dtype="String">
                    </div>
                    <button type="button" name="file-picker-{{key}}" class="file-picker" data-type="image"
                        data-target="icon-path-{{key}}" title="Browse Files" tabindex="-1">
                        <i class="fas fa-file-import fa-fw"></i>
                    </button>
                </div>
            </div>
        </div>
        <div class="flexrow">
            <div class="flexcol text-entry">
                <div class="flexrow path">
                    <div class="wrapper-rel">
                        <label for="coin-value-{{key}}" class="inset-label">{{localize "SFC.Value"}}</label>
                        <input type="text" name="coin-value-{{key}}" title="Value" class="value coin-text-input"
                            value="{{coin.flags.sfc.value}}" placeholder={{localize "SFC.Value" }} data-dtype="String">
                    </div>
                    <div class="wrapper-rel">
                        <label for="coin-weight-{{key}}" class="inset-label">{{localize "SFC.Weight"}}</label>
                        <input type="text" name="coin-weight-{{key}}" title="Weight" class="weight coin-text-input"
                            value="{{coin.system.weight}}" placeholder={{localize "SFC.Weight" }} data-dtype="String">
                    </div>
                </div>
            </div>
        </div>
    </fieldset>
</li>